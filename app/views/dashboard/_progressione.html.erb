          <%# subscription_trend_nov %>
        </small>
      </li>
      <li class="list-group-item">
        <small>
          DIC
          <br/>
          <%# subscription_trend_dic %>
        </small>
      </li>
    </ul>
  </div>
</div>
<div class="row mt-3">
  <div class="col-12">
    <%= line_chart({"Gennaio" => "#{jan_progression}", "Febbraio" => "#{feb_progression}", "Marzo" => "#{mar_progression}", "Aprile" => "#{apr_progression}", "Maggio" => "#{may_progression}"}, height: "120px",colors: ["#29abe0"]) %>
  </div>
</div>
